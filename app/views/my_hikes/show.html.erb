 <div class="container">
    <div class="hidescroll">
      <div class="innerscreen">
        <header class="clearfix">
          <div id="page-title-wrapper">
            <div id="page-title"><%= @my_hike.trail %></div>
            <a href="/my_hikes" class="topnav" id="topnav-left">left</a>
            <a href="/hike_mode/<%= @my_hike.id %>" class="topnav" id="topnav-play">play</a>
          </div>
        </header>

        <main>
          <div class="map">
            <iframe width="285px" height="200px" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
            src="<%= @map_url %>">
            </iframe>
          </div>
  <!--         <div id="elevationgraph">
          </div> -->
          <div class="meta">
            <div class="metaitem freshness <%= "showaqi-level-" + ((@my_hike.parent.aqi.to_i)/26 + 2).to_s %>">
              <p>% freshness</p>
              <span>
                <% if @district.aqi %>
                   <%= (( 1 - (@district.aqi.to_f/300) ) * 100).to_i %>
                <% end %>
              </span>
            </div>
            <div class="metaitem health risk <%= "showaqi-level-" + ((@my_hike.parent.aqi.to_i)/26 + 2).to_s %>">
              <p>Health risk:</p>
              <span>
                <% if @my_hike.parent.aqhi_health_risk %>
                   <%= @my_hike.parent.aqhi_health_risk %>
                <% end %>
              </span>
            </div> 
            <div class="metaitem distance <%= "showaqi-level-" + ((@my_hike.parent.aqi.to_i)/26 + 2).to_s %>">
              <p>Distance:</p>
              <span>
                <% if @my_hike.distance_in_km %>
                <%= @my_hike.distance_in_km %>km
                <% end %>
              </span> 
            </div> 
          </div>
          <div id="routehidescroll">
            <div class="route-details">
              <div class="body">
                <% if @district.area %>
                  <strong>District:</strong>
                    <%= @district.area %>
                  <br>
                <% end %>
                <% if @my_hike.distance_category %>
                  <strong>Distance Category:</strong>
                    <%= @my_hike.distance_category %>
                  <br/>
                <% end %>
                <% if @my_hike.duration %>
                  <strong>Duration:</strong> 
                  <%= @my_hike.duration %>
                  <br>
                <% end %>
                <% if @district.temp && @district.temp != 0 %>
                  <strong>Temperature:</strong>
                  <%= @district.temp %>Â°C
                <% end %>
                  <div>
                  <strong> Freshness Factor:</strong> 
                  <%= @district.aqi_updated_on %>
                  </div>
                <br>
                <% if @my_hike.description %>
                  <div class="description">
                    <%= @my_hike.description %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>
  </div>

